{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled"
  ],
  "reviewers": [
    "strangelookingnerd"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchFiles": ["gradle.properties"],
      "regexManagers": [
        {
          "fileMatch": ["^gradle\\.properties$"],
          "matchStrings": ["^gradleVersion\\s?=\\s?(?<currentValue>.*)$"],
          "depNameTemplate": "Gradle",
          "datasourceTemplate": "gradle-version"
        }
      ]
    }
  ]
}

