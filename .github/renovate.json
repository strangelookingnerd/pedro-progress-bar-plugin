{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled"
  ],
  "reviewers": [
    "strangelookingnerd"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "gradle.properties"
      ],
      "customManagers": [
        {
          "customType": "regex",
          "fileMatch": [
            "^gradle\\.properties$"
          ],
          "matchStrings": [
            "^gradleVersion\\s?=\\s?(?<currentValue>.*)$"
          ],
          "depNameTemplate": "gradle",
          "datasourceTemplate": "gradle-version"
        }
      ]
    }
  ]
}
