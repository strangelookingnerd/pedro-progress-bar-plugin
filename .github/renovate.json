{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled"
  ],
  "reviewers": [
    "strangelookingnerd"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "gradle.properties"
      ],
      "customManagers": [
        {
          "description": "Update Gradle version in properties.",
          "customType": "regex",
          "matchStringsStrategy": "any",
          "fileMatch": [
            "^gradle\\.properties$"
          ],
          "datasourceTemplate": "gradle-version",
          "depNameTemplate": "gradle",
          "matchStrings": [
            "gradleVersion = (?<currentValue>.*)"
          ],
          "versioningTemplate": "gradle"
        }
      ]
    }
  ]
}
